<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetStart="@id/player_full_screen"
        app:constraintSetEnd="@id/player_small"
        app:duration="1000">
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorId="@id/player_view_container"
            app:touchAnchorSide="top"/>
    </Transition>
    <Transition
        app:constraintSetStart="@id/player_small"
        app:constraintSetEnd="@id/no_player"
        app:duration="1000">
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorId="@id/player_view_container"
            app:touchAnchorSide="top"/>
    </Transition>
    <ConstraintSet
        android:id="@+id/player_full_screen">
        <Constraint
            android:id="@id/player_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </Constraint>
        <Constraint
            android:id="@id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintStart_toStartOf="@id/player_view_container"
            app:layout_constraintEnd_toEndOf="@id/player_view_container">
        </Constraint>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/player_small">
        <Constraint
            android:id="@id/player_view_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.12">
        </Constraint>
        <Constraint
            android:id="@id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/player_view_container"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintDimensionRatio="W,16:9"/>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/no_player">
        <Constraint
            android:id="@id/player_view_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.12"
            android:alpha="0">
        </Constraint>
        <Constraint
            android:id="@id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/player_view_container"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintDimensionRatio="W,16:9"/>
    </ConstraintSet>
</MotionScene>