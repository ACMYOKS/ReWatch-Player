    <Transition
        android:id="@+id/fullscreen_to_small"
        app:constraintSetEnd="@id/small"
        app:constraintSetStart="@id/fullscreen"
        app:duration="300">
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchRegionId="@id/player_holder"/>
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="90"
                app:motionTarget="@id/player_view"
                app:percentWidth="0"
                app:percentX="0" />
            <KeyPosition
                app:framePosition="90"
                app:motionTarget="@id/player_holder"
                app:percentWidth="0" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="1"
                app:motionTarget="@id/player_control" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="1"
                app:motionTarget="@id/player_toolbar" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="80"
                app:motionTarget="@id/tv_video_title_small" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="80"
                app:motionTarget="@id/btn_playback_small" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="80"
                app:motionTarget="@id/btn_close_small" />
        </KeyFrameSet>
    </Transition>
