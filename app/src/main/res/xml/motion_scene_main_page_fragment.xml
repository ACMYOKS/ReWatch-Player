    <ConstraintSet android:id="@+id/fullscreen">
        <Constraint
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/player_holder"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/main_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:id="@+id/player_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Constraint
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Constraint
            android:id="@+id/tv_video_title_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toStartOf="@id/btn_playback_small"
            app:layout_constraintStart_toStartOf="@id/player_holder"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/btn_playback_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toStartOf="@id/btn_close_small"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/btn_close_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toEndOf="@id/player_holder"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/player_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/player_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:visibilityMode="ignore" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/small">
        <Constraint
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/player_holder"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/main_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/player_holder"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toTopOf="@id/main_bottom_nav" />
        <Constraint
            android:id="@+id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintDimensionRatio="W,16:9"
            app:layout_constraintStart_toStartOf="@id/player_holder"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/tv_video_title_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toStartOf="@id/btn_playback_small"
            app:layout_constraintStart_toEndOf="@id/player_view"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/btn_playback_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toStartOf="@id/btn_close_small"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/btn_close_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="14dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toEndOf="@id/player_holder"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/player_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/player_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:visibilityMode="ignore" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/dismiss">
        <Constraint
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/main_bottom_nav"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/main_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/player_holder"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:id="@+id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintDimensionRatio="W:16:9"
            app:layout_constraintStart_toStartOf="@id/player_holder"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/tv_video_title_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toStartOf="@id/btn_playback_small"
            app:layout_constraintStart_toEndOf="@id/player_view"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/btn_playback_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toStartOf="@id/btn_close_small"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/btn_close_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="14dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/player_holder"
            app:layout_constraintEnd_toEndOf="@id/player_holder"
            app:layout_constraintTop_toTopOf="@id/player_holder" />
        <Constraint
            android:id="@+id/player_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/player_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:visibilityMode="ignore" />
    </ConstraintSet>
</MotionScene>