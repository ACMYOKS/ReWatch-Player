<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/dismiss_to_fullscreen"
        app:constraintSetStart="@id/video_player_dismiss"
        app:constraintSetEnd="@id/video_player_fullscreen"
        app:duration="300">

    </Transition>

    <Transition
        android:id="@+id/fullscreen_to_small"
        app:constraintSetStart="@id/video_player_fullscreen"
        app:constraintSetEnd="@id/video_player_small"
        app:duration="300">
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorSide="top"
            app:touchAnchorId="@id/player_view_container"/>
        <KeyFrameSet>
            <KeyPosition
                app:motionTarget="@id/player_view"
                app:framePosition="90"
                app:percentX="0"
                app:percentWidth="0"/>
            <KeyPosition
                app:motionTarget="@id/player_view_container"
                app:framePosition="90"
                app:percentWidth="0"/>
            <KeyAttribute
                app:motionTarget="@id/player_control_view"
                app:framePosition="1"
                android:alpha="0"/>
            <KeyAttribute
                app:motionTarget="@id/app_bar_layout"
                app:framePosition="1"
                android:alpha="0"/>
        </KeyFrameSet>
    </Transition>
    <Transition
        android:id="@+id/small_to_dismiss"
        app:constraintSetStart="@id/video_player_small"
        app:constraintSetEnd="@id/video_player_dismiss"
        app:duration="500">
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorSide="top"
            app:touchAnchorId="@id/player_view_container"/>
    </Transition>
    <ConstraintSet
        android:id="@+id/video_player_dismiss">
        <Constraint
            android:id="@+id/player_view_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/player_view_container"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintWidth_percent="0.4"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/tv_video_title_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/player_view"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintEnd_toStartOf="@id/btn_playback_small"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/btn_playback_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintEnd_toStartOf="@id/btn_close_small"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/btn_close_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintEnd_toEndOf="@id/player_view_container"
            android:layout_marginEnd="8dp"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:visibilityMode="ignore"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/player_control_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:visibilityMode="ignore"
            android:alpha="0"/>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/video_player_small">
        <Constraint
            android:id="@+id/player_view_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/player_view_container"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintWidth_percent="0.4"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/tv_video_title_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/player_view"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintEnd_toStartOf="@id/btn_playback_small"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/btn_playback_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintEnd_toStartOf="@id/btn_close_small"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/btn_close_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintEnd_toEndOf="@id/player_view_container"
            android:layout_marginEnd="8dp"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:visibilityMode="ignore"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/player_control_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:visibilityMode="ignore"
            android:alpha="0"/>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/video_player_fullscreen">
        <Constraint
            android:id="@+id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/player_view_container"
            app:layout_constraintEnd_toEndOf="@id/player_view_container"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"/>
        <Constraint
            android:id="@+id/player_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Constraint
            android:id="@+id/player_control_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1"
            app:visibilityMode="ignore">

        </Constraint>
        <Constraint
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:visibilityMode="ignore"
            app:layout_constraintTop_toTopOf="@id/player_view_container">

        </Constraint>
        <Constraint
            android:id="@+id/tv_video_title_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/player_view_container"
            app:layout_constraintEnd_toEndOf="@id/player_view_container"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/btn_playback_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintEnd_toStartOf="@id/btn_close_small"
            android:alpha="0">

        </Constraint>
        <Constraint
            android:id="@+id/btn_close_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/player_view_container"
            app:layout_constraintBottom_toBottomOf="@id/player_view_container"
            app:layout_constraintEnd_toEndOf="@id/player_view_container"
            android:layout_marginEnd="8dp"
            android:alpha="0">

        </Constraint>
    </ConstraintSet>
</MotionScene>