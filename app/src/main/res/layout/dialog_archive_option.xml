<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">
    <TextView
        android:id="@+id/tv_video_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="video resolution"
        app:layout_constraintTop_toTopOf="@id/spinner_video_quality"
        app:layout_constraintBottom_toBottomOf="@id/spinner_video_quality"
        app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
        android:id="@+id/spinner_video_quality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.6"/>
    <TextView
        android:id="@+id/tv_audio_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="audio resolution"
        app:layout_constraintTop_toTopOf="@id/spinner_audio_quality"
        app:layout_constraintBottom_toBottomOf="@id/spinner_audio_quality"
        app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
        android:id="@+id/spinner_audio_quality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_video_quality"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_percent="0.6"/>
</androidx.constraintlayout.widget.ConstraintLayout>