<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingTop="18dp"
    android:paddingEnd="24dp"
    android:paddingBottom="18dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/player_dialog_speed_title"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_current_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="1.00x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus_1"
        app:layout_constraintEnd_toStartOf="@id/btn_plus_1"
        app:layout_constraintStart_toEndOf="@id/btn_minus_1"
        app:layout_constraintTop_toTopOf="@id/btn_minus_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.1"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus_0_1"
        app:layout_constraintEnd_toStartOf="@id/btn_plus_0_1"
        app:layout_constraintStart_toEndOf="@id/btn_minus_0_1"
        app:layout_constraintTop_toTopOf="@id/btn_minus_0_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.05"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus_0_0_5"
        app:layout_constraintEnd_toStartOf="@id/btn_plus_0_0_5"
        app:layout_constraintStart_toEndOf="@id/btn_minus_0_0_5"
        app:layout_constraintTop_toTopOf="@id/btn_minus_0_0_5" />

    <Button
        android:id="@+id/btn_minus_1"
        style="@style/AlertDialogSubButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_current_speed" />

    <Button
        android:id="@+id/btn_plus_1"
        style="@style/AlertDialogSubButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_current_speed" />

    <Button
        android:id="@+id/btn_minus_0_1"
        style="@style/AlertDialogSubButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_minus_1" />

    <Button
        android:id="@+id/btn_plus_0_1"
        style="@style/AlertDialogSubButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_plus_1" />

    <Button
        android:id="@+id/btn_minus_0_0_5"
        style="@style/AlertDialogSubButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_minus_0_1" />

    <Button
        android:id="@+id/btn_plus_0_0_5"
        style="@style/AlertDialogSubButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_plus_0_1" />
</androidx.constraintlayout.widget.ConstraintLayout>