<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- overlay action mode above tool bar -->
        <item name="windowActionModeOverlay">true</item>

        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Snackbar</item>
        <item name="actionModeStyle">@style/AppActionModeStyle</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
    </style>

    <style name="AppProgressDialog" parent="Theme.MaterialComponents.Dialog.Bridge">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">

    </style>
    <style name="AppToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">14dp</item>
        <item name="contentInsetEnd">14dp</item>
        <item name="contentInsetStartWithNavigation">8dp</item>
        <item name="contentInsetEndWithActions">8dp</item>
        <item name="collapsedTitleTextAppearance">@style/AppBarTitleTextAppearance</item>
        <item name="titleTextAppearance">@style/AppBarTitleTextAppearance</item>
    </style>
    <style name="AppBarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
